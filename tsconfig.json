{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "db/src/**/*.ts",
        "knexfile.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}